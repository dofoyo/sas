<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd"><hibernate-configuration>
<session-factory>
	<property name="dialect">org.hibernate.dialect.HSQLDialect</property>
	<property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
	<property name="connection.url">jdbc:hsqldb:hsql://localhost/sas</property>
	<property name="connection.username">sa</property>
	<property name="connection.password"></property>
	<property name="connection.autocommit">false</property>
	<property name="show_sql">false</property>
	<mapping resource="com/rhb/sas/stock/bean/Stock.hsqldb.hbm.xml"/>
	<mapping resource="com/rhb/sas/report/bean/Report.hsqldb.hbm.xml"/>
	<mapping resource="com/rhb/sas/stockholder/bean/Stockholder.hsqldb.hbm.xml" />
</session-factory>
</hibernate-configuration>